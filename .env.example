# Environment
ENVIRONMENT=DEV

# Database Configuration
DB_ROOT_PASSWORD=your_root_password_here
DB_NAME=app_db
DB_USER=user
DB_PASSWORD=your_password_here
DB_HOST=db
DB_PORT=3306

# Application Configuration
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000
JWT_SECRET=your_jwt_secret_here_min_32_characters_long

# Slack Integration
SLACK_CLIENT_ID=your_slack_client_id_here
SLACK_CLIENT_SECRET=your_slack_client_secret_here
SLACK_REDIRECT_URI=http://localhost:8000/api/slack/oauth/callback

# Production-only (Caddy reverse proxy)
CADDY_PRIMARY_DOMAIN=yourdomain.com
CADDY_API_DOMAIN=api.yourdomain.com
CADDY_ACME_EMAIL=your@email.com
CADDY_HTTP_PORT=80
CADDY_HTTPS_PORT=443
